{
    "env": {
        "es2020": true,
        "node": true
    },
    "extends": [
        "standard",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
	   	"import/extensions": [
	      "error",
          "ignorePackages",
	      {
	        "ts": "never"
	      }
        ],
        "@typescript-eslint/interface-name-prefix": ["error", {"prefixWithI": "aways"}],
        "prettier/prettier": "error",
        "class-methods-use-this": "off",
        "@typescript-eslint/camelcase": "off",
        "no-useless-constructor": "off",
        "@typescript-eslint/no-unused-vars": ["error", {
            "argsIgnorePattern": "_"
        }]
	  },
	  "settings": {
	    "import/resolver": {
	      "typescript": {}
	    }
	  }
}
